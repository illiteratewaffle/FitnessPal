<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ucalgary.cpsc.cpsc219project.FitnessPalSortedController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label fx:id="sortType" text="sort type">
               <font>
                  <Font size="24.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <ScrollPane fx:id="workouts" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#onReturnClick" text="Return to Menu">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="totalDays" text="Label" />
            <Label fx:id="totalExercises" text="Label" />
            <Label fx:id="totalSets" text="Label" />
            <Label fx:id="totalReps" text="Label" />
         </children>
      </VBox>
   </children>
</AnchorPane>
