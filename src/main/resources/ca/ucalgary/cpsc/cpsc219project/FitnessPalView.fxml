<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="240.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ucalgary.cpsc.cpsc219project.FitnessPalViewController">
   <children>
      <VBox alignment="CENTER" prefHeight="240.0" prefWidth="480.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Choose how you want your workouts to be sorted">
                     <font>
                        <Font size="18.0" />
                     </font></Label>
               </children></HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="Recent" maxHeight="25.0" maxWidth="100.0" mnemonicParsing="false" onAction="#onSortByRecentClick" prefHeight="25.0" prefWidth="100.0" text="Recently Added">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin></Button>
                  <Button fx:id="Exercise" maxHeight="25.0" maxWidth="100.0" mnemonicParsing="false" onAction="#onSortByExerciseClick" prefHeight="25.0" prefWidth="100.0" text="Exercise">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin></Button>
                  <Button fx:id="Date" maxHeight="25.0" maxWidth="100.0" mnemonicParsing="false" onAction="#onSortByDateClick" prefHeight="25.0" prefWidth="100.0" text="Date">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin></Button>
               </children></HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="130.0" text="See Specific Exercises">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onReturnClick" prefHeight="25.0" prefWidth="130.0" text="Return To Menu">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children></VBox>
   </children>
</AnchorPane>
